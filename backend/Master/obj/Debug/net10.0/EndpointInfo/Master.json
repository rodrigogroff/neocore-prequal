{
  "openapi": "3.0.4",
  "info": {
    "title": "NeoCore API -- Bureau de pré-qualificação",
    "description": "Endpoints para pré-qualificação de propostas de crédito",
    "version": "v1"
  },
  "paths": {
    "/api/authenticate": {
      "post": {
        "tags": [
          "_oauth2"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DtoRequestLoginInformation"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/DtoRequestLoginInformation"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/DtoRequestLoginInformation"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/DtoResponseToken"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DtoResponseToken"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/DtoResponseToken"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/DtoServiceError"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DtoServiceError"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/DtoServiceError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DtoRequestLoginInformation": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "DtoResponseAuthenticatedUserInfo": {
        "type": "object",
        "properties": {
          "stName": {
            "type": "string",
            "nullable": true
          },
          "stEmail": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "DtoResponseToken": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "nullable": true
          },
          "user": {
            "$ref": "#/components/schemas/DtoResponseAuthenticatedUserInfo"
          }
        },
        "additionalProperties": false
      },
      "DtoServiceError": {
        "type": "object",
        "properties": {
          "codigo": {
            "type": "string",
            "nullable": true
          },
          "mensagem": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "JWT Authorization header usando o esquema Bearer. Exemplo: \"Bearer {token}\"",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "tags": [
    {
      "name": "_oauth2"
    }
  ]
}